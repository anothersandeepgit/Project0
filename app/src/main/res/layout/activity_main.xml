<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99FFCC"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/title_string"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        android:typeface="sans" />

    <Button
        android:id="@+id/button_spotify"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/titleText"
        android:background="#F08C35"
        android:backgroundTint="#F08C35"
        android:text="@string/spotify_string"
        android:textSize="30sp"
        android:textStyle="bold"
        android:typeface="sans"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp" />

    <Button
        android:id="@+id/button_scores"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button_spotify"
        android:layout_marginTop="10dp"
        android:background="#F08C35"
        android:backgroundTint="#F08C35"
        android:text="@string/scores_string"
        android:textSize="30sp"
        android:textStyle="bold"
        android:typeface="sans"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp" />


    <Button
        android:id="@+id/button_library"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_below="@id/button_scores"
        android:layout_marginTop="10dp"
        android:background="#F08C35"
        android:backgroundTint="#F08C35"
        android:text="@string/library_string"
        android:textSize="30sp"
        android:textStyle="bold"
        android:typeface="sans"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp" />


    <Button
        android:id="@+id/button_build"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_below="@id/button_library"
        android:layout_marginTop="10dp"
        android:background="#F08C35"
        android:backgroundTint="#F08C35"
        android:text="@string/build_string"
        android:textSize="30sp"
        android:textStyle="bold"
        android:typeface="sans"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp" />


    <Button
        android:id="@+id/button_xyz"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_below="@id/button_build"
        android:layout_marginTop="10dp"
        android:background="#F08C35"
        android:backgroundTint="#F08C35"
        android:text="@string/xyz_string"
        android:textSize="30sp"
        android:textStyle="bold"
        android:typeface="sans"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp" />


    <Button
        android:id="@+id/button_capstone"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_below="@id/button_xyz"
        android:layout_marginTop="10dp"
        android:background="#990033"
        android:backgroundTint="#990033"
        android:text="@string/capstone_string"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:textStyle="bold"
        android:typeface="sans"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp" />

</RelativeLayout>
